<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    xmlns:android="http://schemas.android.com/apk/res/android">



       <!-- <Button
            android:id="@+id/button4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="-" /> -->


    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:clickable="true"
        android:layout_width="0px"
        android:layout_height="0px" />


        <Button
            android:id="@+id/button4"
            android:text="-"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@color/cardview_shadow_start_color"/>

    <Button android:id="@+id/newNoteBut"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_note_add_black_24dp"
            android:layout_gravity="right"
            android:layout_marginRight="80dp"
        />

    <Button
        android:id="@+id/deleteBut"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_delete_black_24dp"
        android:layout_gravity="right"/>

    <Button
        android:id="@+id/shareBut"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_share_black2_24dp"
        android:layout_gravity="right"
        android:layout_marginRight="40dp"/>




        <EditText
            android:id="@+id/noteText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="250dp"
            android:maxHeight="150dp"
            android:layout_gravity="left"
            android:layout_marginTop="50dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="60dp"
            android:padding="18dp"
            android:backgroundTint="@color/cardview_light_background"
            android:text="Hello World!" />

         <Button
             android:layout_width="40dp"
             android:layout_height="40dp"
             android:id="@+id/leftNote"
             android:background="@drawable/ic_chevron_left_black_24dp"
             android:layout_marginBottom="8dp"
             android:layout_gravity="bottom"/>

         <TextView
             android:id="@+id/noteWaterM"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="bottom"
             android:textColor="@color/colorPrimary"
             android:text="hello"/>

         <TextView
             android:id="@+id/counter"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="bottom"
             android:text="1/1"
             android:paddingBottom="20dp"
             android:layout_marginLeft="70dp"/>

         <Button
             android:layout_width="40dp"
             android:layout_height="40dp"
             android:id="@+id/rightNote"
             android:layout_marginBottom="8dp"
             android:background="@drawable/ic_chevron_right_black_24dp"
             android:layout_gravity="bottom"
             android:layout_marginLeft="120dp"/>






</FrameLayout>